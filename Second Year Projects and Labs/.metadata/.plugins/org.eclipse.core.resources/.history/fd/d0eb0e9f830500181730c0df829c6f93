package enamel;
import java.awt.EventQueue;
import javax.swing.JFrame;
import java.awt.Container;
import java.awt.event.ActionEvent;
import javax.swing.GroupLayout;
import javax.swing.JButton;
import javax.swing.JComponent;

public class TreeTraverser extends JFrame {
	public TreeTraverser() {
		initUI();
	}
	private void initUI() {
		JButton quitButton = new JButton("Quit");
		quitButton.addActionListener((ActionEvent event)-> { System.exit(0);});
		
		createLayout(quitButton);
		

		setTitle("Tree Traverser");
		setSize(300,200);
		setLocationRelativeTo(null); // change this if necessary when other things are added
		setDefaultCloseOperation(EXIT_ON_CLOSE);
	}
	
	private void createLayout(JComponent...arg)
	{
		Container pane = getContentPane();
		GroupLayout g1 = new GroupLayout(pane);
		pane.setLayout(g1);

		g1.setAutoCreateContainerGaps(true);
		g1.setHorizontalGroup(g1.createSequentialGroup().addComponent(arg[0]));
		g1.setVerticalGroup(g1.createSequentialGroup().addContainerGap(arg[0]));
	}
	public static void main(String[] args) {
		EventQueue.invokeLater(() -> {
			TreeTraverser prog = new TreeTraverser();
			prog.setVisible(true);
		});
	}
}
